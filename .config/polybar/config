[colors]
background = #bb111111
background-alt = #444
foreground = #ddd
foreground-alt = #888
white = #ffffff
primary = #ffffff
alert = #bd2c40

[bar/main]
monitor = ${env:MONITOR:}
width = 100%
height = 3%
radius = 0
fixed-center = true
bottom = false
background = ${colors.background}
foreground = ${colors.foreground}

border-size = 0
line-size = 1
padding = 3
module-margin-left = 1
module-margin-right = 1


; Fonts
font-0 = "JetBrainsMono Nerd Font:style=Medium"

; Show tray with current running applications
tray-position = left
tray-padding = 3

cursor-click = pointer
cursor-scroll = pointer

modules-left = fs-root fs-home pulseaudio 
modules-center = i3
modules-right = cpu memory date

[settings]
pseudo-transparency = true


; =======================================
; ==              modules              ==
; =======================================

[module/i3]
type = internal/i3
label-focused-foreground = #bd93f9

[module/cpu]
type = internal/cpu
interval = 0.5
format = <label>
format-underline = ${colors.primary}
format-prefix-foreground = ${colors.foreground-alt}
format-prefix= "CPU "
label = %{A1:$TERMINAL -e htop >/dev/null 2>&1 &:}%percentage%%%{A}

[module/date]
type = internal/date
interval = 5
date = "%a %d"
date-alt = "%a %b %d"

format-prefix =
format-prefix-foreground = ${colors.foreground-alt}
format-underline = ${colors.primary}

label = %date% %time%

time = %I:%M
time-alt = %I:%M %p

[module/memory]
type = internal/memory
interval = 2
format-prefix = "MEM "
format-prefix-foreground = ${colors.foreground-alt}
format-underline = ${colors.primary}
label = %percentage_used:2%%

[module/network]
type = internal/network
interface = enp0s31f6

interval = 2.0
udspeed-minwidth = 5
accumulate-stats = true

; Consider an `UNKNOWN` interface state as up.
; Some devices like USB network adapters have
; an unknown state, even when they're running
; Default: false
unknown-as-up = true

; the actual download speed
label-connected = "%downspeed%:1"
label-connected-padding-left=0
label-connected-underline = ${colors.primary}
label-connected-foreground = ${colors.primary}

; DOWN prefix
format-connected = <label-connected>
format-connected-prefix = "DOWN"
format-connected-prefix-foreground= ${colors.foreground-alt}
format-connected-foreground = ${

; Disconnected
label-disconnected = not connected
label-disconnected-foreground = #66ffffff

[module/fs-root]
type = internal/fs
mount-0 = /
interval = 10
fixed-values = true
spacing = 0
format-mounted-underline= ${colors.primary}
label-mounted = root: %free%
label-unmounted = Root is not mounted

[module/fs-home]
type = internal/fs
mount-0 = /home
interval = 10
fixed-values = false
spacing = 0
label-mounted = home: %free%
format-mounted-underline= ${colors.primary}
label-unmounted = Home is not mounted


[module/pulseaudio]
type = internal/pulseaudio
sink = alsa_output.usb-SteelSeries_SteelSeries_Arctis_7-00.mono-chat
use-ui-max = true
; Interval for volume increase/decrease (in percent points)
interval = 5
; Format label-volume tag
format-volume = <label-volume>
label-volume = vol: %percentage%%
label-muted = vol: Muted
format-volume-underline= ${colors.primary}

; Open pavucontrol on right click
click-right = pavucontrol
